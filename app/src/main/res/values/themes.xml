<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Superdiary" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialAlertDialogTheme">@style/Widget.SuperDiary.AlertDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.SuperDiary.BottomSheetDialog</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Base.ThemeOverlay.SuperDiary.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowLightStatusBar">false</item>
        <item name="bottomSheetStyle">@style/Widget.SuperDiary.BottomSheet.Modal</item>
    </style>

    <style name="ThemeOverlay.SuperDiary.BottomSheetDialog" parent="Base.ThemeOverlay.SuperDiary.BottomSheetDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="Widget.SuperDiary.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">@dimen/height_row</item>
        <item name="android:minHeight">@dimen/height_row</item>
        <item name="android:paddingLeft">@dimen/space</item>
        <item name="android:paddingRight">@dimen/space</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">@dimen/space</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Widget.SuperDiary.Button.Icon">
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Widget.SuperDiary.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowAnimationStyle">@style/Animation.SuperDiary.MaterialAlertDialog
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.SuperDiary.NegativeButtonStyle
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SuperDiary.PositiveButtonStyle
        </item>
    </style>


    <style name="Widget.SuperDiary.Button.Icon.RoundedTopEnd">
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.SuperDiary.RoundedTopEnd
        </item>
    </style>
</resources>